@inherits LayoutComponentBase
@inject NavigationManager Nav

<div class="page">
    <!-- Using MudPaper for proper theming -->
    <MudPaper Width="250px" Class="d-inline-flex" Elevation="0">
        <MudNavMenu Class="mud-width-full">
            <NavMenu />
        </MudNavMenu>
    </MudPaper>

    <main>
        <!-- Dark background for the navbar using MudBlazor's dark color system -->
        <div class="top-row px-4 mud-theme-dark">
            <a type="button" href="/logout" class="text-white">Log out</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

