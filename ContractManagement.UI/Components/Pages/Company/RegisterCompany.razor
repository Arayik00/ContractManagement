@page "/registerCompany"
@inherits ContractManagement.UI.ProtectedPageBase
@inject HttpClient Http
@inject ContractManagement.UI.Services.AuthService AuthService
@inject NavigationManager Nav
@rendermode InteractiveServer

<h3>Register Company</h3>

<EditForm Model="@company" OnValidSubmit="RegisterCompanyAsync" FormName="RegisterCompany">
    <div class="container mt-4">
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="companyName" class="form-label">Company Name</label>
                <input id="companyName" class="form-control" @bind="company.CompanyName"
                       type="text" placeholder="Enter company name" required />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-8">
                <label for="companyDescription" class="form-label">Description</label>
                <textarea id="companyDescription" class="form-control" @bind="company.ShortDescription"
                          placeholder="Enter company description" rows="4"></textarea>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary w-100">Register Company</button>
            </div>
        </div>
    </div>
</EditForm>


@if (!string.IsNullOrEmpty(message))
{
    <p>@message</p>
}

@code {
    private Companies company = new Companies();
    private string? message;
    private string? jwt;

    private bool _firstRender = true;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!_firstRender) return;
        _firstRender = false;

        // Get JWT from localStorage safely (JS interop allowed here)
        jwt = await AuthService.GetTokenAsync();

        if (string.IsNullOrEmpty(jwt))
        {
            Nav.NavigateTo("/", forceLoad: true);
        }
    }

    private async Task RegisterCompanyAsync()
    {
        if (string.IsNullOrEmpty(jwt))
        {
            message = "You are not logged in.";
            return;
        }

        // Extract userId from JWT
        var handler = new JwtSecurityTokenHandler();
        var jwtToken = handler.ReadJwtToken(jwt);
        var userIdClaim = jwtToken.Claims
            .FirstOrDefault(c => c.Type == ClaimTypes.NameIdentifier)
            ?.Value;
        Console.WriteLine(jwtToken);
        if (string.IsNullOrEmpty(userIdClaim) || !int.TryParse(userIdClaim, out var userId))
        {
            message = "Invalid user token.";
            return;
        }

        company.AdminId = userId;

        // Add Authorization header
        Http.DefaultRequestHeaders.Authorization =
            new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", jwt);

        // Call API

        var response = await Http.PostAsJsonAsync("/api/companies", company);

        if (response.IsSuccessStatusCode)
        {
            message = "Company registered successfully!";
            Nav.NavigateTo("/MyCompany");
        }
        else
        {
            message = "Failed to register company.";
        }
    }
}
